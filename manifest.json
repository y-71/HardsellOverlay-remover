{
  "manifest_version": 3,
  "name": "Glassdoor Injector",
  "version": "1.0",
  "description": "Inject JavaScript into Glassdoor",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.glassdoor.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
